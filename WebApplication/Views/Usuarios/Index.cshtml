@using WebApplication.Models.ViewModels
@model IEnumerable<UsuariosViewModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="row">
    <div class="col-12">
        <a class="btn btn-primary" href="~/Usuarios/Create">NUEVO USUARIO</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table">
            <tr>
                <th>Documento</th>
                <th>Nombre</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Documento</td>
                    <td>@item.Nombre</td>
                </tr>
            }
        </table>
    </div>
</div>

