@model IEnumerable<CommonComponents.DTOs.UsuariosDTO>

@{
    ViewBag.Title = "Index";
}
@section style
{
    @Styles.Render("~/bundles/datatablecss")
}
@section scripts
{
    @Scripts.Render("~/bundles/datatablejs")
}

<h2>Usuarios</h2>

<p>
    @Html.ActionLink("Crear nuevo usuario", "Create")
</p>
<div class="table-responsive">
    <table id="zero_config" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.usu_documento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.usu_nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.usu_direccion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.usu_telefono)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.usu_correo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.usu_estado)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.usu_documento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.usu_nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.usu_direccion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.usu_telefono)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.usu_correo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.usu_estado)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.usu_documento }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.usu_documento })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>