@model IEnumerable<CommonComponents.DTOs.AreasDTO>

@{
    ViewBag.Title = "Index";
}
@section style
{
    @Styles.Render("~/bundles/datatablecss")
}
@section scripts
{
    @Scripts.Render("~/bundles/datatablejs")
}

<h2>Áreas</h2>

<p>
    @Html.ActionLink("Crear nueva área", "Create")
</p>
<div class="table-responsive">
    <table id="zero_config" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.are_codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.are_nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.are_tiempo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.are_codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.are_nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.are_tiempo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.are_codigo }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.are_codigo })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
